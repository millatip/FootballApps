<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/list_margin">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textColor="@color/colorPrimaryDark"
                tools:text="Sun, 10 January 2018 15:03"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tvVs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginLeft="@dimen/default_margin"
                android:text="@string/vs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDateTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

        />
        <TextView
                android:id="@+id/tvHomeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_team"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/large_default_margin"
                android:layout_marginBottom="@dimen/large_default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                app:layout_constraintEnd_toStartOf="@id/tvVs"
                app:layout_constraintTop_toBottomOf="@id/tvDateTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/tvAwayTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/away_team"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/large_default_margin"
                android:layout_marginBottom="@dimen/large_default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                android:layout_marginRight="@dimen/default_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvVs"
                app:layout_constraintTop_toBottomOf="@id/tvDateTime"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/tvHomeScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3"
                app:layout_constraintStart_toEndOf="@id/tvHomeTeam"
                app:layout_constraintEnd_toStartOf="@id/tvVs"
                app:layout_constraintTop_toBottomOf="@id/tvDateTime"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:id="@+id/tvAwayScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3"
                app:layout_constraintStart_toEndOf="@id/tvVs"
                app:layout_constraintEnd_toStartOf="@id/tvAwayTeam"
                app:layout_constraintTop_toBottomOf="@id/tvDateTime"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>